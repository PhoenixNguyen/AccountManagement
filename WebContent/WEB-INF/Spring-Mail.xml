<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
	<property name="host" value="smtp.gmail.com" />
	<property name="port" value="587" />
	<property name="username" value="hoangphuongtest@gmail.com" />
	<property name="password" value="hoangphuong123" />
 
 	<!-- <property name="host"><value>smtp.gmail.com</value></property>
    <property name="port"><value>587</value></property>
    <property name="protocol"><value>smtp</value></property>
    <property name="username"><value>hoangphuongtest@gmail.com</value></property>
    <property name="password"><value>hoangphuong123</value></property> -->
    
	<property name="javaMailProperties">
	   <props>
       	      <prop key="mail.smtp.auth">true</prop>
       	      <prop key="mail.smtp.starttls.enable">true</prop>
       	      <prop key="mail.smtp.quitwait">false</prop>
       	   </props>
	</property>
</bean>
 
<bean id="mailMail" class="com.hp.common.MailMail">
	<property name="mailSender" ref="mailSender" />
</bean>
 
</beans>